    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/pages/_app.tsx",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "name": "Python: Uvicorn API",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
              "py-api.main:app",
              "--host",
              "localhost",
              "--port",
              "8000",
              "--reload"
            ],
            "console": "integratedTerminal"
          }
    ]
}